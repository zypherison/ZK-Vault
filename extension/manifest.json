{
    "manifest_version": 3,
    "name": "ZK-Vault: Zero-Knowledge Autofill",
    "version": "1.0",
    "description": "Secure, armored, and zero-knowledge password manager with autofill.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://zk-vault.onrender.com/*",
        "https://api.pwnedpasswords.com/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Open ZK-Vault"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    }
}